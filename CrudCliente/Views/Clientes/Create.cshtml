@model CrudCliente.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-3">Inserção de Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="d-grid gap-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="input-group p-2 g-col-6 gap-3">
                <label asp-for="Nome" class="input-group-text"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                <label asp-for="Email" class="input-group-text"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-group p-2 g-col-6 d-flex flex-row gap-3 w-50">
                <div class="d-flex flex-row input-group">
                    <label asp-for="Endereco" class="input-group-text"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <div class="d-flex flex-row input-group">
                    <label asp-for="Contato" class="input-group-text"></label>
                    <input asp-for="Contato" class="form-control" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>
                
                
            </div>
            <div class="input-group p-2 g-col-6">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
